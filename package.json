{
  "name": "quarto-extension-helpers",
  "displayName": "Quarto Extension Helpers",
  "description": "A VS Code extension providing autocomplete for Quarto extensions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:quarto"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "contributes": {
    "languages": [
      {
        "id": "quarto",
        "extensions": [".qmd"],
        "aliases": ["Quarto", "quarto"]
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
