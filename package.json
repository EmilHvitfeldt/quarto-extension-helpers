{
  "name": "quarto-extension-helpers",
  "displayName": "Quarto Extension Helpers",
  "description": "Autocomplete and editor support for popular Quarto extensions (roughnotation, and more)",
  "version": "0.1.0",
  "publisher": "EmilHvitfeldt",
  "author": {
    "name": "Emil Hvitfeldt"
  },
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EmilHvitfeldt/quarto-extension-helpers"
  },
  "bugs": {
    "url": "https://github.com/EmilHvitfeldt/quarto-extension-helpers/issues"
  },
  "homepage": "https://github.com/EmilHvitfeldt/quarto-extension-helpers#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "quarto",
    "qmd",
    "roughnotation",
    "downloadthis",
    "autocomplete"
  ],
  "activationEvents": [
    "onLanguage:quarto"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test:unit": "mocha --require ts-node/register 'src/test/unit/**/*.test.ts'",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish:ovsx": "ovsx publish"
  },
  "contributes": {
    "languages": [
      {
        "id": "quarto",
        "extensions": [
          ".qmd"
        ],
        "aliases": [
          "Quarto",
          "quarto"
        ]
      }
    ],
    "configuration": {
      "title": "Quarto Extension Helpers",
      "properties": {
        "quartoExtensionHelpers.roughnotation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocomplete support for the roughnotation extension"
        },
        "quartoExtensionHelpers.fontawesome.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocomplete support for the fontawesome extension"
        },
        "quartoExtensionHelpers.countdown.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocomplete support for the countdown extension"
        },
        "quartoExtensionHelpers.downloadthis.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocomplete support for the downloadthis extension"
        },
        "quartoExtensionHelpers.acronyms.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocomplete support for the acronyms extension"
        },
        "quartoExtensionHelpers.now.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable autocomplete support for the now extension"
        },
        "quartoExtensionHelpers.debug.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging to the output channel"
        }
      }
    }
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^9.39.2",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.55.0"
  }
}
